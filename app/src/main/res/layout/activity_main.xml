<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:weightSum="3"
        android:orientation="horizontal">
        <!-- Linear progress indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:indeterminate="true" />
        <!-- Circular progress indicator -->

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="true" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <Button
        android:id="@+id/dialogID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#314EEF"
        android:text="Show DialogBox"
        style="@style/Widget.MaterialComponents.Button" />


    <Button
        android:id="@+id/snackBarID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#8643F3"
        android:text="Show SnackBar"
        style="@style/Widget.MaterialComponents.Button" />

    <Button
        android:id="@+id/toastID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#F343F0"
        android:text="Show Toast"
        style="@style/Widget.MaterialComponents.Button" />

    <Button
        android:id="@+id/bottomBarID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#26C348"
        android:text="Show BottomBar"
        style="@style/Widget.MaterialComponents.Button" />

    <Button
        android:id="@+id/drawerID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#E1513D"
        android:text="Show Drawer"
        style="@style/Widget.MaterialComponents.Button" />

    <Button
        android:id="@+id/dateID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#3DC0E1"
        android:text="Show DatePicker"
        style="@style/Widget.MaterialComponents.Button" />


</LinearLayout>